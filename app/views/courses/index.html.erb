<div class="row justify-content-center">
    <div class="col-lg-6">
        <h3 class="text-center">Vakken</h3>
    </div>
</div>

<div class="row justify-content-center pt-3">
    <div class="col-lg-8">
        <table class="table">
            <tr>
                <th>Vak</th>
                <th>Slots per uur</th>
                <th>Aanlooptijd</th>
                <th>Locatie</th>
                <th></th>
            </tr>
            <% @courses.each do |course| %>
                <tr>
                    <td><%= link_to course.name, planner_path(course) %></td>
                    <td><%= course.slots %></td>
                    <td><%= course.minimum %></td>
                    <td><%= course.location %></td>
                    <td><%= link_to "Bewerken", edit_course_path(course) %></td>
                </tr>
            <% end %>
        </table>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <%= link_to "Nieuw vak", new_course_path, class: "w-100 btn btn-lg btn-primary mt-4" %>
    </div>
</div>
