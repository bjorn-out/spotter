<div class="row" style="margin: 5rem;">

    <div class="col-lg-3">
    </div>

    <div class="col-lg-6">
        <h1 class="display-5 fw-bold lh-1 mb-3 text-center mb-5">Programmeerbalie</h1>
        <p class="text-center">Voer je gegevens in zodat we je kunnen herkennen!</p>
        <%= form_for(current_user, url: users_path, class: 'p-4 p-md-5 border rounded-3 bg-light') do |form| %>
            <div class="form-floating mb-3">
                <input name="user[name]" required type="name" class="form-control" id="floatingName" placeholder="name@example.com">
                <label for="floatingName">Name</label>
            </div>
            <div class="form-floating mb-3">
                <input name="user[email]" required type="email" class="form-control" id="floatingMail" placeholder="Password">
                <label for="floatingMail">Email address</label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
        <% end %>
    </div>

    <div class="col-lg-3">
    </div>

</div>
